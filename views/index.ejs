            <p class="text-center text-gray-500 text-sm mb-6">–û—Ü–µ–Ω–∏—Ç–µ –∫–∞–∂–¥–æ–µ –±–ª—é–¥–æ –æ—Ç–¥–µ–ª—å–Ω–æ</p>

            <div class="space-y-6">
                <template x-for="(item, idx) in itemsToReview" :key="idx">
                    <div class="bg-gray-50 dark:bg-dark-800 p-4 rounded-2xl">
                        <div class="flex items-center gap-3 mb-3">
                            <div class="text-2xl" x-text="item.image"></div>
                            <div class="font-bold leading-tight dark:text-white" x-text="item.name"></div>
                        </div>
                        <div class="flex justify-between items-center mb-3">
                            <div class="flex gap-1">
                                <template x-for="i in 5">
                                    <button @click="item.rating = i" class="text-2xl transition"
                                            :class="i <= item.rating ? 'text-yellow-400' : 'text-gray-300'">‚òÖ</button>
                                </template>
                            </div>
                        </div>
                        <input x-model="item.comment" type="text" placeholder="–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π (–Ω–µ–æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ)" class="w-full p-2 bg-white dark:bg-dark-900 border dark:border-dark-700 rounded-lg text-sm dark:text-white">
                    </div>
                </template>
            </div>

            <button @click="sendOrderReviews" class="w-full mt-6 py-3 bg-brand-600 hover:bg-brand-500 text-white rounded-xl font-bold shadow-lg">–û—Ç–ø—Ä–∞–≤–∏—Ç—å –æ—Ç–∑—ã–≤—ã</button>
        </div>
    </div>

    <div x-show="modals.topUp" class="fixed inset-0 z-[70] flex items-center justify-center p-4 bg-black/60 backdrop-blur-sm" x-cloak>
        <div class="bg-white dark:bg-dark-900 w-full max-w-sm rounded-3xl p-6 animate-fade-in" @click.outside="modals.topUp = false">
            <h3 class="text-xl font-bold mb-4 dark:text-white">–ü–æ–ø–æ–ª–Ω–µ–Ω–∏–µ</h3>
            <div class="grid grid-cols-3 gap-3 mb-4">
                <button @click="topUpVal = 100" class="py-2 border-2 dark:border-dark-700 rounded-xl font-bold dark:text-white hover:border-brand-500 transition">100‚ÇΩ</button>
                <button @click="topUpVal = 500" class="py-2 border-2 dark:border-dark-700 rounded-xl font-bold dark:text-white hover:border-brand-500 transition">500‚ÇΩ</button>
                <button @click="topUpVal = 5000" class="py-2 border-2 dark:border-dark-700 rounded-xl font-bold dark:text-white hover:border-brand-500 transition">5000‚ÇΩ</button>
            </div>
            <input type="number" x-model="topUpVal" class="w-full p-3 bg-gray-100 dark:bg-dark-800 rounded-xl text-center font-bold mb-4 dark:text-white">
            <button @click="performTopUp" class="w-full py-3 bg-brand-600 text-white rounded-xl font-bold">–û–ø–ª–∞—Ç–∏—Ç—å</button>
        </div>
    </div>

    <div x-show="modals.supply" class="fixed inset-0 z-[70] flex items-center justify-center p-4 bg-black/60 backdrop-blur-sm" x-cloak>
        <div class="bg-white dark:bg-dark-900 w-full max-w-sm rounded-2xl p-6" @click.outside="modals.supply=false">
            <h3 class="font-bold text-lg mb-4 dark:text-white">–ó–∞–∫–∞–∑ –ø—Ä–æ–¥—É–∫—Ç–æ–≤</h3>
            <p class="text-xs text-gray-400 mb-2">–í—ã–±–µ—Ä–∏—Ç–µ –ø—Ä–æ–¥—É–∫—Ç –∏–∑ –º–µ–Ω—é</p>
            
            <select x-model="supplyForm.productId" class="w-full p-3 bg-gray-100 dark:bg-dark-800 rounded-lg mb-2 dark:text-white">
                <option value="" disabled selected>–í—ã–±–µ—Ä–∏—Ç–µ –ø—Ä–æ–¥—É–∫—Ç...</option>
                <template x-for="p in products" :key="p.id">
                    <option :value="p.id" x-text="p.name"></option>
                </template>
            </select>

            <input x-model="supplyForm.amount" type="number" placeholder="–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ (—à—Ç)" class="w-full p-3 bg-gray-100 dark:bg-dark-800 rounded-lg mb-2 dark:text-white">
            
            <div x-show="supplyForm.productId && supplyForm.amount" class="mb-4 bg-blue-50 dark:bg-blue-900/20 p-2 rounded text-xs text-blue-600 dark:text-blue-300">
                –ü—Ä–∏–º–µ—Ä–Ω–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å: <span class="font-bold" x-text="getSupplyEstCost() + ' ‚ÇΩ'"></span>
            </div>

            <button @click="sendSupplyRequest" class="w-full bg-blue-600 text-white py-3 rounded-xl font-bold shadow-lg" :disabled="!supplyForm.productId">–û—Ç–ø—Ä–∞–≤–∏—Ç—å –∞–¥–º–∏–Ω—É</button>
        </div>
    </div>

    <script>
        const API_URL = "<%= apiUrl %>";
        console.log(API_URL);
        const socket = io();

        function app() {
            return {
                view: 'AUTH',
                authMode: 'login',
                isDark: false,
                globalLoading: false,
                studentTab: 'menu',
                cookTab: 'orders',
                adminTab: 'dashboard',
                menuTime: 'all',
                isSanitaryDay: false,
                user: null,
                products: [],
                myOrders: [],
                allOrders: [],
                adminData: { revenue: 0, supplies: [] },
                adminReport: {},
                cookData: { stats: {}, supplies: [] },
                adminChart: null,
                authForm: { login: '', password: '' },
                regForm: { login: '', password: '', name: '', allergies: '', preferences: '' },
                supplyForm: { productId: '', amount: '' },
                adminMsg: '',
                adminMsgTarget: 'ALL',
                topUpVal: 500,
                cart: [],
                modals: { topUp: false, supply: false, reviews: false, orderReviews: false },
                activeProduct: null,
                productReviews: [],
                itemsToReview: [], 
                notification: { show: false, text: '', icon: '', type: '' },
                announcement: { show: false, message: '', type: 'info' },
                roles: { 'STUDENT': '–£—á–µ–Ω–∏–∫', 'COOK': '–ü–æ–≤–∞—Ä', 'ADMIN': '–ê–¥–º–∏–Ω' },
                statusText: { 'pending': '–ì–æ—Ç–æ–≤–∏—Ç—Å—è', 'ready': '–ì–æ—Ç–æ–≤ –∫ –≤—ã–¥–∞—á–µ', 'completed': '–í—ã–¥–∞–Ω' },
                statusColors: { 'pending': 'bg-yellow-500', 'ready': 'bg-green-500', 'completed': 'bg-gray-400' },

                get filteredProducts() { 
                    return this.products.filter(p => {
                        if (this.menuTime === 'breakfast' && p.menu_type !== 'breakfast' && p.menu_type !== 'all_day') return false;
                        if (this.menuTime === 'lunch' && p.menu_type !== 'lunch' && p.menu_type !== 'all_day') return false;
                        return this.user?.role === 'STUDENT' ? p.stock > 0 : true;
                    }); 
                },
                get cartTotal() { return this.cart.reduce((a,b) => a + (b.price * b.quantity), 0); },
                get activeOrders() { return this.allOrders.filter(o => o.status !== 'completed').reverse(); },
                get hasActiveSub() { 
                    if (!this.user?.subscription_end) return false;
                    const parts = this.user.subscription_end.split('.');
                    if(parts.length !== 3) return false;
                    const subEnd = new Date(parts[2], parts[1]-1, parts[0]);
                    const now = new Date(); now.setHours(0,0,0,0);
                    return subEnd >= now;
                },

                async initApp() {
                    if (window.matchMedia('(prefers-color-scheme: dark)').matches) this.isDark = true;
                    const res = await this.api('/init');
                    if (res) {
                        this.products = res.products;
                        this.isSanitaryDay = res.isSanitaryDay;
                    }
                    this.initSocket();
                },

                initSocket() {
                    socket.on('order:new', (order) => { 
                        if (this.user?.role === 'COOK') { 
                            this.allOrders.push(order); 
                            this.showNotify('–ù–æ–≤—ã–π –∑–∞–∫–∞–∑!', 'üîî'); 
                        } 
                    });
                    socket.on('order:update', (data) => {
                        if (this.user?.role === 'STUDENT' && this.user.id === data.userId) {
                            const o = this.myOrders.find(x => x.id === data.id);
                            if (o) o.status = data.status;
                            if (data.status === 'ready') this.showNotify('–ó–∞–∫–∞–∑ –≥–æ—Ç–æ–≤!', '‚úÖ');
                        }
                        if (this.user?.role === 'COOK') {
                            const o = this.allOrders.find(x => x.id === data.id);
                            if (o) o.status = data.status;
                            if (data.status === 'completed') {
                                this.loadCookData(); 
                            }
                        }
                    });
                    socket.on('notify:banner', (data) => {
                        this.announcement = { show: true, message: data.message, type: data.type };
                        // –ê–≤—Ç–æ—Å–∫—Ä—ã—Ç–∏–µ —á–µ—Ä–µ–∑ 10 —Å–µ–∫—É–Ω–¥
                        setTimeout(() => this.announcement.show = false, 10000);
                    });
                    socket.on('stock:update', (data) => {
                        const p = this.products.find(x => x.id === data.id);
                        if (p) p.stock = data.stock;
                    });
                    socket.on('connect', () => {
                        if (this.user) socket.emit('auth', this.user.role);
                    });
                },

                async api(endpoint, method = 'GET', body = null) {
                    try {
                        const opts = { method, headers: { 'Content-Type': 'application/json' } };
                        if (body) opts.body = JSON.stringify(body);
                        const res = await fetch(API_URL + endpoint, opts);
                        if (!res.ok) throw new Error(`Server Error: ${res.status}`);
                        return await res.json();
                    } catch (e) { console.error("API Err:", e); return null; }
                },

                async login() {
                    this.globalLoading = true;
                    const res = await this.api('/auth/login', 'POST', this.authForm);
                    this.globalLoading = false;
                    if (res && res.success) {
                        this.user = res.user;
                        this.view = 'APP';
                        // –°—Ä–∞–∑—É —Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä—É–µ–º —Ä–æ–ª—å –≤ —Å–æ–∫–µ—Ç–µ
                        socket.emit('auth', this.user.role);
                        this.loadRoleData();
                    } else { alert(res?.error || '–û—à–∏–±–∫–∞ –≤—Ö–æ–¥–∞'); }
                },
                async register() {
                    if (!this.regForm.login || !this.regForm.password) return alert('–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –ø–æ–ª—è');
                    const res = await this.api('/auth/register', 'POST', this.regForm);
                    if (res && res.success) { this.showNotify('–°–æ–∑–¥–∞–Ω–æ! –í–æ–π–¥–∏—Ç–µ.', '‚úÖ'); this.authMode = 'login'; } 
                    else { alert(res?.error || '–û—à–∏–±–∫–∞'); }
                },
                logout() { 
                    window.location.reload();
                },

                normalizeText(str) { return str ? str.toLowerCase().replace(/—ë/g, '–µ').replace(/[^–∞-—èa-z\s]/g, '') : ''; },
                hasAllergy(product) {
                    if (!this.user?.allergies) return false;
                    const userAllergens = this.user.allergies.split(',').map(s => this.normalizeText(s)).filter(s => s.length > 2);
                    const productText = this.normalizeText(product.name + ' ' + product.desc);
                    return userAllergens.some(allergen => productText.includes(allergen));
                },

                async loadRoleData() {
                    if (!this.user) return;
                    if (this.user.role === 'STUDENT') {
                        const orders = await this.api(`/orders/user/${this.user.id}`);
                        if (orders) this.myOrders = orders.reverse();
                    } else if (this.user.role === 'COOK') {
                        const orders = await this.api('/cook/orders');
                        if (orders) this.allOrders = orders;
                        this.loadCookData();
                    } else if (this.user.role === 'ADMIN') {
                        this.loadAdminStats();
                    }
                },
                
                async loadCookData() {
                    const data = await this.api('/cook/data');
                    if (data) this.cookData = data;
                },

                async loadAdminStats() {
                    const data = await this.api('/admin/stats/advanced');
                    if (data) {
                        this.adminData.revenue = data.revenue;
                        this.updateAdminChart(data.attendance);
                    }
                },
                async loadAdminSupplies() {
                    const supplies = await this.api('/admin/supplies');
                    this.adminData.supplies = supplies;
                },
                async updateSupplyStatus(supply, status) {
                    await this.api('/admin/supplies/action', 'POST', { 
                        id: supply.id, 
                        status, 
                        productId: supply.product_id, 
                        amount: supply.amount 
                    });
                    this.loadAdminSupplies();
                },
                async loadAdminReport() {
                    const report = await this.api('/admin/report');
                    this.adminReport = report;
                },
                async sendGlobalNotify(type) {
                    if(!this.adminMsg) return;
                    await this.api('/admin/notify', 'POST', { 
                        message: this.adminMsg, 
                        type, 
                        target: this.adminMsgTarget 
                    });
                    this.adminMsg = '';
                    this.showNotify('–û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ', 'üöÄ');
                },

                addToCart(p) {
                    const ex = this.cart.find(x => x.id === p.id);
                    if (ex) ex.quantity++; else this.cart.push({...p, quantity:1});
                    this.showNotify('–î–æ–±–∞–≤–ª–µ–Ω–æ', 'üõí');
                },

                async placeOrder() {
                    this.globalLoading = true;
                    const res = await this.api('/orders', 'POST', {
                        userId: this.user.id, items: this.cart, total: this.cartTotal, payWithSub: this.hasActiveSub
                    });
                    this.globalLoading = false;
                    if (res && res.success) {
                        this.user = res.user;
                        this.cart = [];
                        this.studentTab = 'orders';
                        this.showNotify('–ó–∞–∫–∞–∑ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω!', 'üöÄ');
                        this.loadRoleData();
                    } else { alert(res?.error || '–û—à–∏–±–∫–∞ –∑–∞–∫–∞–∑–∞'); }
                },

                async openProductReviews(product) {
                    this.activeProduct = product;
                    this.modals.reviews = true;
                    const res = await this.api(`/products/${product.id}/reviews`);
                    this.productReviews = res || [];
                },

                async confirmReceipt(orderId) {
                    await this.api('/orders/confirm', 'POST', { orderId });
                    const o = this.myOrders.find(x => x.id === orderId);
                    if(o) o.status = 'completed';
                    this.itemsToReview = o.items.map(item => ({
                        productId: item.id,
                        name: item.name,
                        image: item.image || 'üçΩ',
                        rating: 5,
                        comment: ''
                    }));
                    this.modals.orderReviews = true;
                },

                async sendOrderReviews() {
                    this.globalLoading = true;
                    const promises = this.itemsToReview.map(item => 
                        this.api('/reviews', 'POST', {
                            userId: this.user.id,
                            productId: item.productId,
                            rating: item.rating,
                            comment: item.comment
                        })
                    );
                    await Promise.all(promises);
                    this.globalLoading = false;
                    this.modals.orderReviews = false;
                    this.showNotify('–°–ø–∞—Å–∏–±–æ –∑–∞ –æ—Ç–∑—ã–≤—ã!', '‚≠êÔ∏è');
                },

                async performTopUp() {
                    await this.api('/user/topup', 'POST', { userId: this.user.id, amount: parseInt(this.topUpVal) });
                    this.user.balance += parseInt(this.topUpVal);
                    this.modals.topUp = false;
                },
                
                async buySubscription() {
                    if (this.user.balance < 5000) return alert('–ù–∞ –±–∞–ª–∞–Ω—Å–µ –Ω—É–∂–Ω–æ 5000‚ÇΩ');
                    if (!confirm('–ö—É–ø–∏—Ç—å –∞–±–æ–Ω–µ–º–µ–Ω—Ç –∑–∞ 5000‚ÇΩ?')) return;
                    this.globalLoading = true;
                    const res = await this.api('/user/subscribe', 'POST', { userId: this.user.id });
                    this.globalLoading = false;
                    if (res && res.success) {
                        this.user.balance -= 5000;
                        this.user.subscription_end = res.subDate;
                        this.showNotify('–ê–±–æ–Ω–µ–º–µ–Ω—Ç –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω!', 'üî•');
                    } else { alert('–û—à–∏–±–∫–∞ –ø–æ–∫—É–ø–∫–∏'); }
                },

                async updateOrderStatus(id, status) {
                    await this.api('/cook/status', 'POST', { orderId: id, status });
                    const o = this.allOrders.find(x => x.id === id);
                    if (o) o.status = status;
                },

                async updateStock(productId, newAmount) {
                    if (newAmount < 0) return;
                    const p = this.products.find(x => x.id === productId);
                    if (p) p.stock = newAmount;
                    await this.api('/cook/stock', 'POST', { productId, amount: newAmount });
                },

                getSupplyEstCost() {
                    const p = this.products.find(x => x.id == this.supplyForm.productId);
                    if (!p || !this.supplyForm.amount) return 0;
                    return Math.round(p.price * 0.6 * this.supplyForm.amount);
                },

                async sendSupplyRequest() {
                    if(!this.supplyForm.productId || !this.supplyForm.amount) return;
                    await this.api('/supplies/request', 'POST', { 
                        productId: this.supplyForm.productId, 
                        amount: this.supplyForm.amount 
                    });
                    this.modals.supply = false;
                    this.showNotify('–ó–∞—è–≤–∫–∞ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞', 'üöö');
                    this.loadCookData();
                },
                
                async toggleSanitary() {
                    this.isSanitaryDay = !this.isSanitaryDay;
                    await this.api('/admin/sanitary', 'POST', { state: this.isSanitaryDay });
                },

                updateAdminChart(data) {
                    const ctx = document.getElementById('attendanceChart');
                    if (!ctx || !data) return;
                    
                    const labels = data.map(d => d.d.split('-').slice(1).reverse().join('.'));
                    const counts = data.map(d => d.c);

                    if (this.adminChart) this.adminChart.destroy();
                    this.adminChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: labels,
                            datasets: [{ 
                                label: '–ü–æ—Å–µ—Ç–∏—Ç–µ–ª–∏',
                                data: counts, 
                                backgroundColor: '#FF6B00',
                                borderRadius: 6
                            }]
                        },
                        options: { 
                            responsive: true, 
                            maintainAspectRatio: false, 
                            plugins: { legend: { display: false } },
                            scales: { y: { beginAtZero: true, ticks: { precision: 0 } } }
                        }
                    });
                },

                toggleTheme() { this.isDark = !this.isDark; },
                formatPrice(p) { return (p||0).toLocaleString('ru-RU') + ' ‚ÇΩ'; },
                formatTime(d) { return new Date(d).toLocaleTimeString('ru-RU', {hour:'2-digit', minute:'2-digit'}); },
                showNotify(text, icon, type = '') { this.notification = {show: true, text, icon, type}; setTimeout(() => this.notification.show = false, 4000); }
            }
        }
    </script>
